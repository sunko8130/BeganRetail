<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:cardBackgroundColor="@color/md_blue_grey_100"
        app:cardCornerRadius="2dp">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:stretchColumns="*">

            <TableRow>

                <org.mmtextview.components.MMTextView
                    style="@style/textViewStyle"
                    android:layout_height="24dp"
                    android:layout_span="2"
                    android:text="@string/transaction_cashout_moeny" />

                <org.mmtextview.components.MMTextView
                    android:id="@+id/tv_cashout"
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    tool:text="textView" />
            </TableRow>

            <TableRow android:id="@+id/req_date_row">

                <org.mmtextview.components.MMTextView
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    android:text="@string/transaction_request_date" />

                <org.mmtextview.components.MMTextView
                    android:id="@+id/tv_request_date"
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    tool:text="textView" />
            </TableRow>

            <TableRow android:id="@+id/cashout_date_row">

                <org.mmtextview.components.MMTextView
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    android:text="@string/transaction_cashout_date" />

                <org.mmtextview.components.MMTextView
                    android:id="@+id/tv_cashout_date"
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    tool:text="textView" />
            </TableRow>

            <TableRow>

                <org.mmtextview.components.MMTextView
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    android:text="@string/transaction_status" />

                <org.mmtextview.components.MMTextView
                    android:id="@+id/tv_status"
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    tool:text="textView" />
            </TableRow>

        </TableLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>