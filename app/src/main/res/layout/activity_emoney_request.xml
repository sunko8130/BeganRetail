<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.emoney_request.EmoneyRequestActivity">


    <com.frontiertechnologypartners.beganretail.widgets.MMTextInputLayout
        style="@style/TextInputLayoutStyle"
        android:layout_marginTop="10dp"
        android:hint="@string/request_amount"
        app:boxStrokeColor="@color/register_input_box_stroke">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_request_amount"
            style="@style/TextInputEditTextStyle" />

    </com.frontiertechnologypartners.beganretail.widgets.MMTextInputLayout>

    <org.mmtextview.components.MMButton
        android:id="@+id/btn_withdraw"
        style="@style/smallButtonStyle"
        android:layout_marginTop="20dp"
        android:text="@string/withdraw" />
</LinearLayout>