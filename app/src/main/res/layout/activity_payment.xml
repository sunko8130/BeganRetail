<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.payment.PaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <org.mmtextview.components.MMTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:text="@string/delivery_order_number"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_delivery_number"
            style="@style/SpinnerStyle" />

        <org.mmtextview.components.MMTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="@string/from_date" />

        <org.mmtextview.components.MMButton
            android:id="@+id/btn_from_date"
            style="@style/ImageButtonStyle"
            android:drawableEnd="@drawable/ic_date_range_24dp"
            android:hint="@string/from_date"
            android:singleLine="true"
            android:textAlignment="textStart" />

        <org.mmtextview.components.MMTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/to_date" />

        <org.mmtextview.components.MMButton
            android:id="@+id/btn_to_date"
            style="@style/ImageButtonStyle"
            android:drawableEnd="@drawable/ic_date_range_24dp"
            android:hint="@string/to_date"
            android:singleLine="true"
            android:textAlignment="textStart" />

        <org.mmtextview.components.MMButton
            android:id="@+id/btn_search"
            style="@style/smallButtonStyle"
            android:layout_marginBottom="10dp"
            android:text="@string/search" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_payment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>